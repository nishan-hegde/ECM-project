<resources>
    <string name="app_name">ECM</string>
    <!-- Define a custom style for buttons -->
    <style name="BorderButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bordered_button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="SolidButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/solidbutton</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="gray_border_input_fields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bordered_button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>